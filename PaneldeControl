    <div class="card">
        <h2>A√±adir Rescatado üêï</h2>
        <input type="text" id="nombre" placeholder="Nombre del perrito">
        <input type="number" id="edad" placeholder="Edad">
        <textarea id="descripcion" placeholder="Descripci√≥n y vacunas"></textarea>
        <input type="text" id="nombreFoto" placeholder="Nombre de la foto (ej: sol.jpg)">
        <button id="btnPublicar">Publicar en la Web</button>
        <p id="status"></p>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getFirestore, collection, addDoc } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

        // Tus credenciales reales de la imagen
        const firebaseConfig = {
            apiKey: "AIzaSyB0ahP8K53dm8BIRhjXYxCbSJ8...", 
            authDomain: "refugio-de-patitas.firebaseapp.com",
            projectId: "refugio-de-patitas",
            storageBucket: "refugio-de-patitas.appspot.com",
            messagingSenderId: "5921473252",
            appId: "1:5921473252:web:16f18c4c7cf1ad1..."
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        document.getElementById('btnPublicar').onclick = async () => {
            const status = document.getElementById('status');
            status.innerText = "Guardando...";
            try {
                await addDoc(collection(db, "perritos"), {
                    nombre: document.getElementById('nombre').value,
                    edad: document.getElementById('edad').value,
                    desc: document.getElementById('descripcion').value,
                    // Apuntamos a tu carpeta de fotos en GitHub
                    fotoUrl: "fotos/" + document.getElementById('nombreFoto').value,
                    fecha: new Date()
                });
                status.innerText = "¬°Listo! El perrito ya aparece en la web.";
            } catch (e) {
                status.innerText = "Error al guardar.";
            }
        };
    </script>
